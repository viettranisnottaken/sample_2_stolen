


<h2>The number of posts is <%= @microposts.count() %></h2>


<table>
  <% @microposts.each do |p| %>
  <tr style="border: 1px solid black;">
    <td><%= p.user.name %></td>
    <td><%= p.content %></td>
    <td><%= p.created_at.strftime("%Y-%m-%d %H:%M-%S") %></td>
    <td><%= link_to 'Show', "#" %></td>
    <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Edit', "#" %></td> <!-- user == current_user -->

  </tr>
  <% end %>
</table>

  <%= will_paginate %>
