<% provide(:title, "Password Reset") %>

<h1>Absent-minded one, inscribe your electronic mail address below!</h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email  %>
      <%= f.email_field :email, class: "form-control", placeholder: "Peenus" %> <br>

      <%= f.submit "TAKE ME!", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
