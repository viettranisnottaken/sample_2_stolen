<table>
  <thead>
    <tr style="font-weight: bold;">
      <td>Title</td>
      <td>Content</td>
      <td colspan="3">Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p, user| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p[:content] %></td>
      <td><%= link_to 'Show', p %></td>
      <td><%= link_to 'Edit', edit_post_path(p) %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<p><%= link_to "New post", new_post_path, class: "btn btn-success", style: "color: white" %></p>

<%= will_paginate %>
